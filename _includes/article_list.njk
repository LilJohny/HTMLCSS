<ol reversed class="articlelist"
    style="counter-reset: start-from {{ (articleslistCounter or articleslist.length) + 1 }}">
    {% for articles in articleslist | reverse %}
    <li class="articlelist-item{% if article.url == url %} articlelist-item-active{% endif %}">
        <a href="{{ article.url | url }}"
            class="articlelist-link">{% if article.data.title %}{{ article.data.title }}{% else %}<code>{{ article.url }}</code>{% endif %}</a>
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        {% for tag in article.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
        {%- endif -%}
        {% endfor %}
    </li>
    {% endfor %}
</ol>